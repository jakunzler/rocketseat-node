{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "@rocketseat/eslint-config/node",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    // we want to force semicolons
    "semi": ["error", "never"],
    // we use 2 spaces to indent our code
    "indent": ["error", 2],
    // we want to avoid extraneous spaces
    "no-multi-spaces": ["error"]
  }
}
